#include<stdio.h>
int main()
{
    int b,p,x;
    printf("Enter base and exponent: \n");
    scanf("%d %d", &b, &p);
    x = power(b,p);
    printf("Result is %d", x);
}
int power(int base, int exponent)
{
    int result = 1,i;
    for(i=1;i<=exponent;i++)
    {
        result = result*base;
    }
    return result;
